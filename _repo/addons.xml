            <import addon="xbmc.python" version="2.1.0"/>
            <import addon="script.module.m7lib" version="0.1.0"/>
        </requires>
        <extension library="default.py" point="xbmc.python.pluginsource">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Watch live streams of animals!</summary>
            <description>Watch live streams of animals from around the world.</description>
            <platform>all</platform>
        </extension>
    </addon>

